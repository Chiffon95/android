<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/first_c"
            android:layout_alignBaseline="@id/tv_s"
            android:textSize="80sp"
            android:text="00"/>
        <TextView
            android:id="@+id/first_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_s"
            android:layout_alignBaseline="@id/tv_s"
            android:textSize="80sp"
            android:text=":"/>
        <TextView
            android:id="@+id/tv_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="80sp"
            android:text="00"/>
        <TextView
            android:id="@+id/tv_second_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_s"
            android:layout_alignBaseline="@id/tv_s"
            android:textSize="80sp"
            android:text=":"/>
        <TextView
            android:id="@+id/tv_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_second_c"
            android:layout_alignBaseline="@id/tv_s"
            android:textSize="80sp"
            android:text="00"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/tv_s"
            android:layout_toLeftOf="@id/btn_start"
            android:text="start"/>
        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/tv_s"
            android:onClick="onClick"
            android:text="start"/>
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/tv_s"
            android:layout_toRightOf="@id/btn_start"
            android:text="start"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>