<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activity2_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="다음장으로"/>
            <Button
                android:id="@+id/activity2_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="다음장으로"/>
        </LinearLayout>

        <EditText
            android:id="@+id/activity2_et_str_to_activity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="입력 시 다음화면에 출력"/>

        <TextView
            android:id="@+id/activity2_tv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="버튼을 누르면 다음 장으로 넘어갑니다"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>