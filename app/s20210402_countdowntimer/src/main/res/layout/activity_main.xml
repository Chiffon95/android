<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@id/layout_timer"
            android:gravity="center"
            android:inputType="number"
            android:hint="타이머 시간 지정 (초)"/>

        <RelativeLayout
            android:id="@+id/layout_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/first_c"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:text="00"/>
            <TextView
                android:id="@+id/first_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_m"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"

                android:text=":"/>
            <TextView
                android:id="@+id/tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:text="00"/>
            <TextView
                android:id="@+id/second_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_m"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:text=":"/>
            <TextView
                android:id="@+id/tv_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/second_c"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:text="00"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/layout_timer"
            android:layout_toLeftOf="@id/btn_cancel"
            android:onClick="onClickStart"
            android:text="start"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/layout_timer"
            android:onClick="onClickCancel"
            android:text="cencel"/>
        <Button
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/layout_timer"
            android:layout_toRightOf="@id/btn_cancel"
            android:onClick="onClickStop"
            android:text="pause"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>